<div class = "user">

  <table>
    <tr>
      <td>
        <div>
          <%= link_to("Home", {:controller => 'landing', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Rate", {:controller => 'city', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Friends", {:controller => 'user', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Explore", {:controller => 'rating', :action => 'city_explorer'}, :class => "home_link") %>
        </div>
      </td>
    </tr>
  </table>

  <h1>Explore by city</h1>

  <div class = 'user_list_table'>
    <% @city.each do |city| %>
      <div class = 'city_explorer'>
        <tr>
          <%= link_to(city.city_name, {:controller => 'restaurant', :action => 'city_restaurant_list', :city_id => city.id}) %>
        </tr>
        <tr>
          <div class = 'star_rating'>
            <%= render_stars(city.ratings.average('restaurant_rating'))%>
          </div>
        </tr>
      </div>
    <% end %>
  </div>

</div>
