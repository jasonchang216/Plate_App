<h1>New User</h1>

<div>
  <%= form_for(:user, :url => {:action => 'create'}) do |f| %>
  <table summary = "User form fields">
    <tr>
      <td><h3><%= f.label(:first_name) %></h3></td>
      <td><%= f.text_field(:first_name) %></td>
    </tr>
    <tr>
      <td><h3><%= f.label(:last_name) %></h3></td>
      <td><%= f.text_field(:last_name) %></td>
    </tr>
    <tr>
      <td><h3><%= f.label(:email) %></h3></th>
      <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
      <td><h3><%= f.label(:username) %></h3></th>
      <td><%= f.text_field(:username) %></td>
    </tr>
    <tr>
      <td><h3><%= f.label(:password) %></h3></th>
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <td>
        <div class = "login">
          <h3><%= link_to("Back to Login", {:controller => 'access', :action => 'login'}) %></h3>
        </div>
      </td>
      <td>
        <div>
          <%= submit_tag('Create User', :class => 'button') %>
        </div>
      </td>
    </tr>
  </table>
  <% end %>
</div>
