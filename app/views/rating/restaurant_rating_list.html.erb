<div class = 'main'>
  <h1>Ratings for <%= @restaurant.restaurant_name %></h1>
</div>
<div class = 'main'>
  <p><%= @restaurant.city %> - <%= @restaurant.neighborhood %></p>
</div>

<div class = 'main'>
  <p>Average rating: <%= render_stars(@restaurant.ratings.average('restaurant_rating'))%></p>
</div>

<div class = 'main'>
  <p><%= link_to('Add your review!', {:controller => 'rating', :action => 'new', :restaurant_id => @restaurant.id}) %></p>
</div>

<div class = 'main_rating'>
  <table class = 'rating_table'>
    <% @ratings.each do |rating| %>
    <tr>
      <td>
        <table class = 'rating_row'>
          <tr>
            <td class = 'rating_user'><%= link_to(rating.user.username, {:action => 'user_rating_list', :user_id => rating.user_id}) %> - <%= rating.date_rated.to_time.strftime("%B %d") %></td>
          </tr>
          <tr>
            <td><%= render_stars(rating.restaurant_rating) %></td>
          </tr>
          <tr>
            <td><%= rating.restaurant_comment %></td>
          </tr>
          <% if current_user == rating.user %>
            <tr>
              <td><%= link_to('Edit', {:action => 'edit', :rating_id => rating.id, :restaurant_id => rating.restaurant_id}) %> - <%= link_to('Delete', {:action => 'delete', :rating_id => rating.id, :restaurant_id => rating.restaurant_id}) %></td>
            </tr>
          <% end %>
        </table>
      </td>
    </tr>
    <% end %>
  </table>
</div>
