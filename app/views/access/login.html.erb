<h1>Login</h1>

<%= form_tag(:action => 'attempt_login') do %>
<table>
  <tr>
    <td><h3><%= label_tag(:username) %></h3></td>
    <td><%= text_field_tag(:username) %></td>
  </tr>
  <tr>
    <td><h3><%= label_tag(:password) %></h3></td>
    <td><%= password_field_tag(:password) %></td>
  </tr>
  <tr></tr>
  <tr></tr>
  <tr>
    <td>
      <div class = 'login'>
        <h3><%= link_to("New User", {:controller => 'user', :action => 'new'}) %></h3>
      </div>
    </td>
    <td>
        <h3><%= submit_tag("Login", :class => 'button')%></h3>
    </td>
  </tr>
</table>
<% end %>
