<div class = "landing">

  <h1>Welcome</h1>

  <table>
    <tr>
      <td>
        <div>
          <%= link_to("Home", {:controller => 'landing', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Rate", {:controller => 'city', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Friends", {:controller => 'user', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Explore", {:controller => 'rating', :action => 'city_explorer'}, :class => "home_link") %>
        </div>
      </td>
    </tr>
  </table>

  <div class = 'feed_table'>
    <% @ratings.each do |rating| %>
      <div>
        <table>
          <td rowspan = '4' class = 'rating_restaurant'>
            <%= link_to(rating.restaurant.restaurant_name, {:controller => 'rating', :action => 'restaurant_rating_list', :restaurant_id => rating.restaurant_id}, :class => 'landing_link') %>
          </td>
          <tr class = 'first_row'>
            <td colspan = '1'class = 'rating_stars'><%= render_stars(rating.restaurant_rating) %></td>
            <td colspan = '2'> <%= rating.date_rated.to_time.strftime("%B %d") %> </td>
          </tr>
          <tr>
            <td colspan = '3' class = 'rating_comment'><%= rating.restaurant_comment %></td>
          </tr>
          <tr class = 'last_row'>
            <td colspan = '2' class = 'rating_user'><%= link_to(rating.user.username, {:controller=> 'rating', :action => 'user_rating_list', :user_id => rating.user_id}) %></td>
            <td><%= rating.city.city_name rescue " " %>
          </tr>
        </table>
      </div>
    <% end %>
  </div>

</div>
