<div class = "user">

  <table>
    <tr>
      <td>
        <div>
          <%= link_to("Home", {:controller => 'landing', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Rate", {:controller => 'city', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Friends", {:controller => 'user', :action => 'index'}, :class => "home_link") %>
        </div>
      </td>
      <td>
        <div>
          <%= link_to("Explore", {:controller => 'rating', :action => 'city_explorer'}, :class => "home_link") %>
        </div>
      </td>
    </tr>
  </table>

  <h1>Explore by city</h1>

  <div class = 'user_list_table'>
    <% @restaurants.each do |restaurant| %>
      <div>
        <tr>
          <%= link_to({:controller => 'rating', :action => 'restaurant_rating_list', :restaurant_id => restaurant.id, :city_id => @city.id}, :class => 'landing_link') do %>
            <h3><%= restaurant.restaurant_name %></h3>
            <div class = 'star_rating'><%= render_stars(restaurant.ratings.average('restaurant_rating'))%></div>
          <% end %>
        </tr>
      </div>
    <% end %>
  </div>

</div>
