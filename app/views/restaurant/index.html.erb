<div class = 'main'>
  <h1>Restaurant List</h1>
</div>

<div class = 'main'>
  <h3><%= link_to("New Restaurant", {:controller => 'restaurant', :action => 'new'}) %></h3>
</div>

<div class = 'main'>
  <table>
    <% @restaurants.each do |restaurant| %>
      <td class = 'rating_row'>
        <tr>
          <th class = 'rating_rating' rowspan="2"><%= restaurant.ratings.average('restaurant_rating') %></th>
          <th class = 'rating_restaurant' colspan="2"><%= link_to(restaurant.restaurant_name, {:controller => 'rating', :action => 'restaurant_rating_list', :restaurant_id => restaurant.id})%></th>
        </tr>
        <tr>
          <td><%= restaurant.city %></td>
          <td><%= restaurant.neighborhood %></td>
        </tr>
        <tr>
          <td colspan="2"><%= link_to('New Rating', {:controller => 'rating', :action => 'new', :restaurant_id => restaurant.id}) %></td>
          <td><%= link_to('Edit Restaurant', {:controller => 'restaurant', :action => 'edit', :restaurant_id => restaurant.id}) %></td>
        </tr>
      </td>
    <% end %>
  </table>
</div>
